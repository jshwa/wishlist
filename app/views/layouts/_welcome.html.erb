<% if !user_signed_in? %>
  <%= tag.div class:"intro_container" do %>
    <%= tag.div class:"intro" do %>
      <%= tag.h1 "Welcome to Wishlist!" %>
      <%= tag.h3 "Find the perfect gift for him or her" %>
      <%= tag.h3 "And help everyone else get you what you really wanted" %>
      <%= button_to "Get Started", new_user_registration_path, method:'get', class:'welcome_btn' %>
    <% end %>
  <% end %>
<% else %>
  <%= tag.div class:"welcome_back_container" do %>
    <%= tag.div class:"welcome_back" do %>
      <%= tag.h1 "Welcome Back #{current_user.username.humanize}" %>
      <%= tag.h3 "Don't forget to write your wishlist description." %>
      <%= tag.h3 "Tell us what kinds of gifts you find most interesting!" %>
      <%= button_to "Start Writing", edit_list_path(current_user.list), method:'get', class:'welcome_btn', form_class: 'js-welcome-btn' %>
    <% end %>
  <% end %>
<% end %>
