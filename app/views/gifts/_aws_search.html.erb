<%= tag.div class:"gift_list" do %>
  <% Gift.amazon_search_results(item)["ItemSearchResponse"]["Items"]["Item"].each do |item| %>
    <%= tag.li do %>
      <% unless item.is_a?(Array) %>
        <% new_gift = Gift.new_gift_from_amazon(item) %>
        <%= image_tag new_gift.image %> <br>
        <%= link_to shorten_name(new_gift.name), new_gift.url, target: "_blank" %>
        <%= link_to_if new_gift.price != nil, number_to_currency(new_gift.price), new_gift.url, target: "_blank" %><br>
        <% new_gift.categories.build(name: item["ItemAttributes"]["Binding"]) %>
        <br><br>
        <% if new_gift.persisted? && current_user && current_user.gifts.include?(new_gift) %>
          <%= button_to "On Your Wishlist", list_path(current_user.list), method: 'get', class: 'card_button_added' %>
        <% elsif new_gift.persisted? %>
        <%= form_for new_gift, url: gift_path(new_gift), html: {method: "patch"} do |g| %>
          <%= g.submit "Add to Wishlist", class:'card_button' %>
          <% end %>
        <% end %>

<% #add to wishlist button %>
      <% unless new_gift.persisted? %>
        <%= form_for new_gift, url: gifts_path, html: {method: "post"} do |g|%>
          <%= g.hidden_field :name %>
          <%= g.hidden_field :price%>
          <%= g.hidden_field :url %>
          <%= g.hidden_field :image %>
          <%= g.hidden_field :description %>
          <%= g.fields_for :categories do |cat| %>
            <%= cat.hidden_field :name %>
          <% end %>
          <%= g.submit "Add to Wishlist", class:"card_button"%>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
  <br><br>
<% end %>
