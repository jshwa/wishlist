<%= tag.h1 "#{@list.user.username.capitalize}'s Wishlist" %>

<%= tag.h2 "About #{@list.user.username.capitalize}'s Wishlist:" %>
  <%= tag.div class:"big_box wishlist_desc" do %>
    <%= @list.description %><%= tag.br %>
    <%= link_to "Edit", edit_list_path(@list) if current_user == @list.user %>
  <% end %>

<% @list.gifts.each do |gift| %>
  <%= tag.div class:"gift_item" do %>
      <% if gift.users.include?(current_user) %>
        <%= tag.div class:"x" do %>
          <%= form_for gift, method: "delete" do |g| %>
            <%= g.submit "X", class:"delete_btn"%>
          <% end %>
        <% end %>
      <% end %>
    <%= tag.div class:"item_box" do %>
      <%= tag.div class:"image_and_button" do %>
        <%= link_to (image_tag gift.image), gift_path(gift) %> <br><br>
        <%= button_to "Reviews", gift_reviews_path(gift), method: 'get', class:'item_button' %><%= tag.br %>
        <%= add_a_button(gift) %>
      <% end %>
      <%= tag.div class:"gift_info" do %>
        <%= tag.h2 link_to "#{gift.name}", gift_path(gift) %>
        <%= tag.h3 "Description:" %><%= gift.description %> <br><br>
        <strong>Price:</strong> <%= number_to_currency(gift.price) %><br><br>
      <% end %>
    <% end %>
  <% end %>
<% end %>
